{
  "compilerOptions": {
    "target": "es2016",                                  
    "baseUrl": "src",
    "rootDirs": ["src"],
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true,
    "noImplicitReturns": true,
  },
  "include": ["src"]
}
